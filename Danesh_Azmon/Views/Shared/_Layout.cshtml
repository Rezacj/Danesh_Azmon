<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- اضافه کردن Favicon با فرمت SVG -->
    <link rel="icon" type="image/svg+xml" href="./images/leaf.svg">

    <!-- برای اطمینان از سازگاری با مرورگرهای قدیمی‌تر -->
    <link rel="alternate icon" href="./images/leaf.svg">
  
</head>
<body>
  
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
 
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
